<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddTravelPlanActivity"
    android:padding="32dp">

    <TextView
        android:id="@+id/txt_add_plan_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rencana Perjalanan"
        android:textSize="32sp"
        android:textColor="@color/dark"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        />
    <TextView
        android:id="@+id/txt_tgl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tanggal Perjalanan"
        android:fontFamily="@font/poppins_medium"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/txt_add_plan_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:textColor="@color/dark"
        />
    <Button
        android:id="@+id/btn_show_calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_tgl"
        android:text="Pilih tanggal perjalanan"
        style="@style/rounded_stroke_filled"
        android:layout_marginTop="4dp"
        />
    <TextView
        android:id="@+id/txt_asal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Asal"
        android:fontFamily="@font/poppins_medium"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/btn_show_calendar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:textColor="@color/dark"
        />
    <Spinner
        android:id="@+id/spinner_asal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_asal"
        android:padding="8dp"
        android:fontFamily="@font/poppins_regular"
        android:textSize="16sp"
        android:textColor="@color/dark"
        />
    <TextView
        android:id="@+id/txt_tujuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tujuan"
        android:fontFamily="@font/poppins_medium"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/spinner_asal"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:textColor="@color/dark"
        />
    <Spinner
        android:id="@+id/spinner_tujuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_tujuan"
        android:padding="8dp"
        android:fontFamily="@font/poppins_regular"
        android:textSize="16sp"
        android:textColor="@color/dark"
        />
    <TextView
        android:id="@+id/txt_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kelas Kereta"
        android:fontFamily="@font/poppins_medium"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/spinner_tujuan"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:textColor="@color/dark"
        />
    <Spinner
        android:id="@+id/spinner_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_class"
        android:padding="8dp"
        android:fontFamily="@font/poppins_regular"
        android:textSize="16sp"
        android:textColor="@color/dark"
        />
    <TextView
        android:id="@+id/txt_additional"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Paket Tambahan"
        android:fontFamily="@font/poppins_medium"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/spinner_class"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:textColor="@color/dark"
        />
    <HorizontalScrollView
        android:id="@+id/scrollview_paket"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_additional"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scrollbars="none"
        >
        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/toggle_group_paket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txt_additional"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:singleSelection="false"
            >
            <Button
                android:id="@+id/btn_add_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Makan siang"
                android:fontFamily="@font/poppins_regular"
                android:textSize="16sp"
                style="@style/rounded_stroke"
                android:layout_marginHorizontal="4dp"
                />
            <Button
                android:id="@+id/btn_add_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duduk pinggir jendela"
                android:fontFamily="@font/poppins_regular"
                android:textSize="16sp"
                style="@style/rounded_stroke"
                android:layout_marginHorizontal="4dp"
                />
            <Button
                android:id="@+id/btn_add_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duduk bagian depan"
                android:fontFamily="@font/poppins_regular"
                android:textSize="16sp"
                style="@style/rounded_stroke"
                android:layout_marginHorizontal="4dp"
                />
            <Button
                android:id="@+id/btn_add_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wi-Fi"
                android:fontFamily="@font/poppins_regular"
                android:textSize="16sp"
                style="@style/rounded_stroke"
                android:layout_marginHorizontal="4dp"
                />
            <Button
                android:id="@+id/btn_add_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Asuransi"
                android:fontFamily="@font/poppins_regular"
                android:textSize="16sp"
                style="@style/rounded_stroke"
                android:layout_marginHorizontal="4dp"
                />
            <Button
                android:id="@+id/btn_add_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bantal &amp; Selimut"
                android:fontFamily="@font/poppins_regular"
                android:textSize="16sp"
                style="@style/rounded_stroke"
                android:layout_marginHorizontal="4dp"
                />
            <Button
                android:id="@+id/btn_add_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TV &amp; Film"
                android:fontFamily="@font/poppins_regular"
                android:textSize="16sp"
                style="@style/rounded_stroke"
                android:layout_marginHorizontal="4dp"
                />
        </com.google.android.material.button.MaterialButtonToggleGroup>

    </HorizontalScrollView>

    <TextView
        android:id="@+id/txt_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Harga:"
        android:textSize="24sp"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintBottom_toTopOf="@id/btn_pesan"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginVertical="16dp"
        />
    <TextView
        android:id="@+id/txt_harga"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Rp99.999"
        android:textSize="24sp"
        android:textAlignment="textEnd"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/txt_total"
        app:layout_constraintBottom_toTopOf="@id/btn_pesan"
        android:layout_marginVertical="16dp"
        android:layout_marginStart="8dp"
        />
    <Button
        android:id="@+id/btn_pesan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pesan"
        android:fontFamily="@font/poppins_medium"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/imrik_blue"
        />

</androidx.constraintlayout.widget.ConstraintLayout>