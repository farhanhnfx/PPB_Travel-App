<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/txt_register_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Daftar Akun"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:textSize="32sp"
        android:textColor="@color/dark"
        />
    <TextView
        android:id="@+id/txt_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:fontFamily="@font/poppins_regular"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/txt_register_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        android:textColor="@color/dark"
        />
    <EditText
        android:id="@+id/edit_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_email"
        android:hint="Masukkan email"
        android:fontFamily="@font/poppins_regular"
        android:textSize="16sp"
        android:background="@drawable/rectangle_rounded"
        android:paddingVertical="8dp"
        android:paddingHorizontal="16dp"
        android:textColorHint="@color/grey"
        />

    <TextView
        android:id="@+id/txt_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Username"
        android:fontFamily="@font/poppins_regular"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/edit_email"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:textColor="@color/dark"
        />
    <EditText
        android:id="@+id/edit_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_username"
        android:hint="Masukkan username"
        android:fontFamily="@font/poppins_regular"
        android:textSize="16sp"
        android:background="@drawable/rectangle_rounded"
        android:paddingVertical="8dp"
        android:paddingHorizontal="16dp"
        android:textColorHint="@color/grey"
        />


    <TextView
        android:id="@+id/txt_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password"
        android:fontFamily="@font/poppins_regular"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/edit_username"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:textColor="@color/dark"
        />
    <EditText
        android:id="@+id/edit_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_password"
        android:hint="Masukkan password"
        android:fontFamily="@font/poppins_regular"
        android:textSize="16sp"
        android:background="@drawable/rectangle_rounded"
        android:paddingVertical="8dp"
        android:paddingHorizontal="16dp"
        android:textColorHint="@color/grey"
        android:inputType="textPassword"
        />

    <TextView
        android:id="@+id/txt_tgl_lahir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tanggal Lahir"
        android:fontFamily="@font/poppins_regular"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/edit_password"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:textColor="@color/dark"
        />
    <Button
        android:id="@+id/btn_show_tgl_lahir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_tgl_lahir"
        android:fontFamily="@font/poppins_regular"
        android:text="Pilih tanggal lahir"
        style="@style/rounded_stroke_filled"
        />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daftar"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/imrik_blue"
        android:textSize="16sp"
        android:padding="12dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>